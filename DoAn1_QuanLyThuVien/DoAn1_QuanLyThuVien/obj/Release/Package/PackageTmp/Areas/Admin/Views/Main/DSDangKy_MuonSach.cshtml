@model IEnumerable<DoAn1_QuanLyThuVien.Models.DKyMuonSach>

@{
    ViewBag.Title = "Yêu cầu mượn sách";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<body>
    @using (Html.BeginForm("DSDangKy_MuonSach", "Main"))
    {
        <div class="Header_Dau_Sach">
            <div class="row align-items-center ">
                <div class="col-md-4 ">
                    <h3 class="Dau-sach-header-content">Danh sách đăng ký mượn sách</h3>
                </div>
                <div class="col-md-4 DauSach-btn-search">
                    <input type="search" placeholder="Search...." name="_name">
                </div>
                <div class="col-md-4">
                </div>
            </div>
        </div>

        <div class="list_DauSach_table">

            <table class="table_DauSach">
                <thead>
                    <tr>
                        <td>MSSV</td>
                        <td>Họ tên</td>
                        <td>Tên sách</td>
                        <td class="table_DauSach_ChucNang"></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(a=>item.MaThe)</td>
                            <td>@Html.DisplayFor(a => item.TheThuVien.HoTen)</td>
                            <td>@Html.DisplayFor(a => item.Sach.DauSach.TenSach)</td>
                            <td class="theTV-btn">
                                <a class="suss" href="@Url.Action("Them_DSDangKy_MuonSach","Main", new {id=item.MaDangKyMuonSach})"><i class="fas fa-check"></i></a>
                                <a class="del"href="@Url.Action("Xoa_DSDangKy_MuonSach","Main", new {id=item.MaDangKyMuonSach})"> <i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }                    
                </tbody>
            </table>
        </div>
    }
</body>
</html>

