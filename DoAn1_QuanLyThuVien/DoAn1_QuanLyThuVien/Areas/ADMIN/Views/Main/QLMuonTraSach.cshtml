@model IEnumerable<DoAn1_QuanLyThuVien.Models.Sach_Dang_Muon>

@{
    ViewBag.Title ="Trả sách";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<body>
     @using (Html.BeginForm("QLMuonTraSach", "Main"))
     {
        <div class="Header_Dau_Sach">
            <div class="row align-items-center ">
                <div class="col-md-4 ">
                    <h3 class="Dau-sach-header-content"> Danh sách SV mượn sách</h3>
                </div>
                <div class="col-md-4 DauSach-btn-search">
                    <input type="search" placeholder="Search...."name="_name">
                </div>
                <div class="col-md-4">                   
                </div>
            </div>
        </div>
        <div class="list_DauSach_table">

            <table class="table_DauSach">
                <thead>
                    <tr>

                        <td>MSSV</td>
                        <td>Tên sinh viên</td>
                        <td>Tên sách</td>
                        <td>Ngày mượn</td>
                        <td>...</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(a=>item.MaThe)</td>
                            <td>@Html.DisplayFor(a => item.TheThuVien.HoTen)</td>
                            <td>@Html.DisplayFor(a => item.Sach.DauSach.TenSach)</td>
                            <td>@Html.DisplayFor(a => item.NgayMuon)</td>
                            <td class="table_DauSach_btn">
                                <a href="@Url.Action("TraSach","Main",new {id=item.MaSachMuon })">Trả sách</a>
                            </td>
                        </tr>
                    }                  
                   
                </tbody>
            </table>
        </div>
     }
</body>
</html>

